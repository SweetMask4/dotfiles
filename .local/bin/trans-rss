#!/bin/bash

url=$1

[ -z "$url" ] && exit 1

curl -s "$url" -o "/tmp/$(echo -n $(basename "$url").html)" && lynx -dump "/tmp/$(echo -n $(basename "$url").html)" > "/tmp/$(echo -n $(basename "$url").txt)" && trans :es -no-warn -no-browser -b  -i "/tmp/$(echo -n $(basename "$url").txt)" -o "/tmp/$(echo -n $(basename "$url")-es.txt)"  && alacritty -e less "/tmp/$(echo -n $(basename "$url")-es.txt)"  &>/dev/null 2>&1 &
