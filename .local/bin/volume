#!/bin/sh

# Check if audio is muted
is_muted() {
    pactl list sinks | awk '/^[[:space:]]Mute:/ {print $2}' | head -n 1
}

# Get current volume
get_volume() {
    pactl list sinks | grep '^[[:space:]]Volume:' | head -n 1 | awk '{print $5}' | sed 's/[%|,]//g'
}

# Send volume notification
send_notification() {
    if [ "$(is_muted)" = "yes" ]; then
        notify-send -i audio-volume-muted -a "Volume" -r "9993" -u low "Muted" " "
    else
        notify-send -i audio-volume-high -a "Volume" -r "9993" -h int:value:"$(get_volume)" -h string:x-canonical-private-synchronous:"" "Volume: $(get_volume)%"
    fi
}

# Toggle mute state
toggle_mute() {
    if [ "$(is_muted)" = "yes" ]; then
        pactl set-sink-mute @DEFAULT_SINK@ 0
    else
        pactl set-sink-mute @DEFAULT_SINK@ 1
    fi
    send_notification
}

# Adjust volume
adjust_volume() {

    volumen=$(get_volume)
    case "$1" in
        "up") [ "$volumen" != 100 ] && volumen_cons=$((volumen+5)) ;;
        "down") volumen_cons=$((volumen-5)) ;;
        "mute") pactl set-sink-mute @DEFAULT_SINK@ toggle ;;
    esac

    pactl set-sink-volume @DEFAULT_SINK@ "$volumen_cons"%

    send_notification
}

# Main script
case "$1" in
    up | down | mute)
        adjust_volume "$1"
        ;;
esac
